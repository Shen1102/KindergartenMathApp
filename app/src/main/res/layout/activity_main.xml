<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F4F8">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="top|center_horizontal"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Logo at the top -->


        <!-- Spacer pushes toggle + buttons down -->
        <View
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/tako_logo" />

        <!-- Difficulty -->
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_weight="1" />

        <RadioGroup
            android:id="@+id/rgDifficulty"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp">

            <RadioButton
                android:id="@+id/rbEasy"
                android:text="Easy (0–10)"
                android:checked="true"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/rbHard"
                android:text="Hard (0–99)"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <!-- Big rounded buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCounting"
            style="?attr/materialButtonStyle"
            android:text="Counting"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            app:cornerRadius="24dp"
            app:elevation="8dp"
            app:backgroundTint="@color/lightBlue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNumberRecog"
            style="?attr/materialButtonStyle"
            android:text="Numbers Recognition"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            app:cornerRadius="24dp"
            app:elevation="8dp"
            app:backgroundTint="@color/mediumBlue" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMissing"
            style="?attr/materialButtonStyle"
            android:text="Missing Number"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:cornerRadius="24dp"
            app:elevation="8dp"
            app:backgroundTint="@color/darkBlue" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
